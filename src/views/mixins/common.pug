//------------------------------------------------------------------------------
//- Common mixins
//------------------------------------------------------------------------------

//-
  Image mixin
  @param {string} file - Name and extension: 'my-image.jpg'
  @param {string} alt - Text of alt attribute
mixin img(file)
  img(src=require('@/assets/images/' + file))&attributes(attributes)

//-
  SVG sprite mixin
  @param {string} iconID - Name of icon ID attribute without #: 'icon-help'
mixin uiIcon(icon_id)
  i.ui-icon&attributes(attributes): svg: use(xlink:href=require('@/assets/images/sprite.svg') + '#' + icon_id)

//-
  Phone number mixin
mixin uiPhoneNumber
  a.link-primary(href="tel:"+mainPhoneNumber.href)=mainPhoneNumber.title

//-
  Adress mixin
mixin uiAdress
  a.link-primary(href=mainAdress.href target="_blank")&attributes(attributes)=mainAdress.title

//-
  Title icon mixin
mixin uiTitleIcon
  span.ui-title-icon.p-sm: block


//-
  Button element
  @param {string} tag - Name of element tag: 'button', 'a'
mixin uiButton(kind, tag="button")
  #{tag}(class=['u-preload', 'ui-button', 'btn-'+kind])&attributes(attributes)
    block
