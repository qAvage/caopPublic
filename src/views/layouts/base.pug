//------------------------------------------------------------------------------
//- Main layout
//------------------------------------------------------------------------------

include ../config/global
include ../mixins/index

doctype html
html(lang='ru-RU')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width,initial-scale=1.0, viewport-fit=cover, maximum-scale=1')
    meta(name="description" content=description)
    meta(property="og:description" content=description)
    meta(property="og:title" content=title)
    link(rel="icon" sizes="any" type="image/svg+xml" href="/meta/favicon.svg")
    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/meta/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/meta/favicon-16x16.png")
    link(rel="manifest" href="/meta/site.webmanifest")
    link(rel="mask-icon" href="/meta/safari-pinned-tab.svg" color="#3452cd")
    meta(name="msapplication-TileColor" content="#3452cd")
    meta(name="theme-color" content="#ffffff")
    title=title
    include ../parts/metrics
    include ../parts/jivo
  body(class=pageClass)
    include ./header
    main
      block breadcrumbs
        +uiBreadcrumbs
      block main
      block common
        include ./common
    include ./footer
    include ../parts/form-popup.pug
    include ../parts/success-popup.pug
    include ../parts/cookie-modal.pug

